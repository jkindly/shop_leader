<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            <link rel="preconnect" href="https://fonts.gstatic.com">
            <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/login-form.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
        {% endblock %}
    </head>
    <body>

    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
        <div class="alert alert-warning mb-0">
            Aktualnie jesteś zalogowany jako {{ app.user.login }} -sy
            <a href="{{ path('app_index', {'_switch_user': '_exit'}) }}">[Wyjdź z podglądu]</a>
        </div>
    {% endif %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('app_index') }}">Sanctum - panel</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_task_index') }}">Zadania</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Bany</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_team_index') }}">Zespół</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                       aria-haspopup="true" aria-expanded="false">Pozostałe</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Komendy</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Separated link</a>
                    </div>
                </li>
            </ul>
            {% if is_granted('ROLE_USER') %}
                <div class="float-right position-relative">
                    <div id="user-nav-avatar" class="empty-avatar small-avatar white-circle cursor-pointer">O</div>
                    <div id="user-nav-avatar-menu" style="display: none;">
                        <a class="dropdown-item" href="{{ path('app_account_index') }}">Konto</a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="dropdown-item" href="{{ path('app_account_index') }}">Panel Administracyjny</a>
                        {% endif %}
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Wyloguj</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-12 pt-5">

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {% block body %}
                {% endblock %}
            </div>
        </div>
    </div>
    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
    </body>
</html>
