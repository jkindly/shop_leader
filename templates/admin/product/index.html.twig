{% extends 'admin/base.html.twig' %}
{% block body %}
<h1>Lista dostępnych produktów w sklepie</h1>
<a class="btn btn-primary" href="{{ path('app_admin_product_add') }}">+ Nowy produkt</a>
<table class="table table-hover mt-3">
    <thead>
    <tr>
        <th>ID</th>
        <th>Nazwa</th>
        <th>Cena</th>
        <th>Na stanie</th>
        <th>Edytuj</th>
        <th>Usuń</th>
    </tr>
    </thead>
    {% for product in products %}
    <tr>
        <td>{{ product.id }}</td>
        <td>{{ product.title }}</td>
        <td>{{ product.price }}</td>
        <td>{{ product.count }}</td>
        <td><a href="{{ path('app_admin_product_edit', {'id': product.id}) }}"><i class="fas fa-edit"></i>
                Edytuj</a></td>
        <td><a class="btn-delete" href="admin/product/delete/{$product.id}"><i class="fas fa-trash-alt"></i>
                Usuń</a></td>
    </tr>
    {% else %}
        Brak produktów
    {% endfor %}
</table>
{% endblock %}