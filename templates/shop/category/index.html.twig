{% extends 'base.html.twig' %}
{% block body %}
    {% include 'parts/side_nav.html.twig' %}
    <div class="col-12 m-auto col-lg-9">
        <div class="row">
            <div class="col-12">
                <h1 class="underline-title">{{ category.title }}</h1>
                <div class="category-desc">
                    {{ category.descriptionTop }}
                </div>
            </div>
        </div>
        <div class="row">
        {% for product in category.products %}
            <div class="col-md-6 col-lg-4 product">
                <div class="product-image">
                    <a href="{{ path('app_product_index', {slug: product.slug, id: product.id}) }}">
                        <img class="img-fluid" src="{{ asset('img/products/4.jpg') }}" alt="">
                    </a>
                </div>
                <div class="product-info">
                    <p class="product-title">{{ product.title }}</p>
                    <div class="product-price-basket">
                        <p class="price m-0"><strong>{{ product.price }} PLN</strong></p>
                        <span class="add-to-basket">
                            <i class="fas fa-shopping-basket"></i>
                        </span>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Brak produkt√≥w w tej kategorii</p>
        {% endfor %}
        </div>
        <div class="row">
            <div class="col-12">
                <div class="category-desc">
                    {{ category.descriptionBottom }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
                        <li class="page-item"><a class="page-link" href="#">24</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}